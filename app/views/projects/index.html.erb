<div class="flex flex-col w-full gap-8">
  <% if notice.present? %>
    <p class="inline-block px-3 py-2 mb-5 font-medium text-green-500 rounded-lg bg-green-50" id="notice">
      <%= notice %>
    </p>
  <% end %>
  <%= render 'hero' %>
  <div class="flex flex-row items-center justify-end w-auto mx-4 mt-4 space-x-4 xl:justify-normal xl:max-w-sm xl:mx-12 xl:mt-20">
    <h1 class="order-2 ml-4 italic font-light text-vazBlue-700 xl:order-none">Projects</h1>
    <hr class="flex-grow order-1 h-px border-0 bg-vazBlue-500 dark:bg-vazBlue-500 xl:order-none">
  </div>
  <div id="projects" class="min-w-full px-8 mt-4 xl:mt-12 xl:px-20">
    <% @projects.each_with_index do |project, index| %>
      <%= render partial: 'projects/project_card', locals: { project:, right_side: index % 2 == 0 ? false : true  } %>
    <% end %>
  </div>
</div>
