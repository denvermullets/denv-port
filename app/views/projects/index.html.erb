<div class="flex flex-col w-full gap-8">
  <% if notice.present? %>
    <p class="inline-block px-3 py-2 mb-5 font-medium text-green-500 rounded-lg bg-green-50" id="notice">
      <%= notice %>
    </p>
  <% end %>
  <%= render 'hero' %>
  <div class="flex flex-row items-center max-w-sm mx-12 mt-20 space-x-4">
    <h1 class="italic font-light text-vazBlue-700">Projects</h1>
    <hr class="flex-grow h-px border-0 bg-vazBlue-500 dark:bg-vazBlue-500">
  </div>
  <div id="projects" class="min-w-full px-20 mt-12">
    <% @projects.each_with_index do |project, index| %>
      <%= render partial: 'projects/project_card', locals: { project:, right_side: index % 2 == 0 ? false : true  } %>
    <% end %>
  </div>
</div>
