<div class="flex flex-col w-full gap-8">
  <% if notice.present? %>
    <p class="inline-block px-3 py-2 mb-5 font-medium text-green-500 rounded-lg bg-green-50" id="notice">
      <%= notice %>
    </p>
  <% end %>
  <%= render 'hero' %>
  <div id="projects" class="min-w-full p-20">
    <% @projects.each_with_index do |project, index| %>
      <%= render partial: 'projects/project_card', locals: { project:, right_side: index % 2 == 0 ? true : false  } %>
    <% end %>
  </div>
</div>
