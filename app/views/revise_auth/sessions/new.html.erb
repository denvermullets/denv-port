<div class='flex items-start justify-center w-full min-h-screen pt-[160px]'>
  <div class='w-full max-w-md p-6 border bg-vazBeige-50 border-foreground rounded-xl text-vazBlack-50'>
    <h1 class='mb-2 text-xl font-bold text-center text-vazBlue-700'>Log in to your account</h1>
    <h1 class='mb-6 text-sm text-center '>Start making your dreams come true</h1>
    <%= form_with url: login_path, class: 'space-y-4' do |form| %>
      <div class='space-y-2'>
        <%= form.label :email %>
        <%= form.email_field :email, placeholder: 'your_email@email.com', autofocus: true, required: true, class: input_styles %>
      </div>
      <div class='space-y-2'>
        <%= form.label :password %>
        <%= form.password_field :password, placeholder: 'Password', required: true, class: input_styles %>
      </div>
      <div class='flex flex-row items-center justify-between w-full pt-4'>
        <% if flash[:alert] %>
          <div class="justify-start font-bold text-red-500">
            <%= flash[:alert] %>
          </div>
        <% end %>
        <%= form.submit 'Log in', class: button_styles %>
        <%= link_to 'Sign up', '/sign_up', class: "#{button_styles} flex items-center justify-center" %>
      </div>
    <% end %>
  </div>
</div>
