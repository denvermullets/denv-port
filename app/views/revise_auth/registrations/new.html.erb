<div class='flex items-start justify-center w-full min-h-screen pt-[160px]'>
  <div class='w-full max-w-md p-6 shadow-lg bg-foreground rounded-xl'>
    <h1 class='mb-2 text-xl font-bold text-center text-vazBlue-700'>Create your account</h1>
    <h1 class='mb-6 text-sm text-center '>Start making your dreams come true</h1>
    <%= form_with model: @user, url: sign_up_path, class: "space-y-4" do |form| %>
      <% password_error = nil %>
      <% password_conf_error = nil %>
      <% username_error = nil %>
      <% email_error = nil %>
      <% if form.object.errors.any? %>
        <% form.object.errors.full_messages.each do |message| %>
          <p><%= message %></p>
          <% if message == "Password confirmation doesn't match Password" %>
            <% password_conf_error = "Password confirmation doesn't match Password" %>
          <% end %>
          <% if message == "Password is too short (minimum is 10 characters)" %>
            <% 'Password is too short (minimum is 10 characters)' %>
          <% end %>
        <% end %>
      <% end %>
      <div class='space-y-2'>
        <%= form.label :email %>
        <%= form.email_field :email, placeholder: 'your_email@email.com', autofocus: true, required: true, class: input_styles %>
        <% if email_error.present? %>
          <p class='text-sm text-red-500'><%= email_error %></p>
        <% end %>
      </div>
      <div class='space-y-2'>
        <%= form.label :password %>
        <%= form.password_field :password, placeholder: 'Password', required: true, class: input_styles %>
        <% if password_error.present? %>
          <p class='text-sm text-red-500'><%= password_error %></p>
        <% end %>
      </div>
      <div class='mb-4 space-y-2'>
        <%= form.label :password_confirmation %>
        <%= form.password_field :password_confirmation, placeholder: 'Password Confirmation', required: true, class: input_styles %>
        <% if password_conf_error.present? %>
          <p class='text-sm text-red-500'><%= password_conf_error %></p>
        <% end %>
      </div>
      <div class='flex flex-row items-center justify-between w-full pt-4'>
        <%= form.submit 'Create Account', class: button_styles %>
        <%= link_to 'Log in', login_path, class: "#{button_styles} flex items-center justify-center" %>
      </div>
    <% end %>
  </div>
</div>
